@using IS.Users.Models
@model IEnumerable<AppUser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="pannel panel-primary">
    <div class="panel-heading">
        User Accounts
    </div>
    <div class="panel-body">
        <table class="table table-striped">
            <tr><th>ID</th><th>Name</th><th>Email</th><th>操作</th></tr>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="3">没有数据</td></tr>
            }
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        @Html.ActionLink("编辑", "Edit", "Admin", new { id = user.Id }, new { @class = "btn btn-primary btn-xs" })
                        @using (@Html.BeginForm("Delete", "Admin", new { id = user.Id }))
                        {
                            <button type="submit" class="btn btn-danger btn-xs">删除</button>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
@Html.ActionLink("创建", "Create", null, new { @class = "btn btn-primary" })